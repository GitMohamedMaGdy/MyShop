@model  MyShop.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="col-md-2">
    <h4>Filter by Category</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var item in Model.ProductsCategories)
        {
            @Html.ActionLink(item.Category, "Index", new { Category = item.Category }, new { @class = Request["Category"] == item.Category ? "list-group-item active" : "list-group-item" })

        }
    </div>
</div>


<div class="col-md-10">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4" style="height:450px;height:10px;margin:10px;border:solid thin white">
            <div class="col-md-12">
                <img src="~/Content/Images/@item.Image" class="img" style="height:250px" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <p>@item.Price</p>
            </div>
            <div class="col-md-12">
                <a href="@Url.Action("AddToBasket","Basket",new { Id = item.Id})"class="btn btn-primary">Add To Basket</a>
            </div>
        </div>
    }
</div>

<div class="col-md-12 clearfix">

</div>