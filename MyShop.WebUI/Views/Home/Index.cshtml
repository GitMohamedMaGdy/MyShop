@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}


@foreach (var item in Model)
{
<div class="col-md-4" style="height:450px;height:10px;margin:10px;border:solid thin white">
    <div class="col-md-12">
        <img src="~/Content/Images/@item.Image" class="img" style="height:250px" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
    </div>
    <div class="col-md-12">
        <p>@item.Description</p>
    </div>
    <div class="col-md-12">
        <p>@item.Price</p>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-default btn btn-primary" >Add To basket</a>
    </div>
</div>
}

<div class="col-md-12 clearfix">

</div>